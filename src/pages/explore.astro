	function weightFunction(p, g) {
		if (p === 0) return 0;
		if (p === 1) return 1;
		const numerator = Math.pow(p, g);
		const denominator = Math.pow(numerator + Math.pow(1 - p, g), 1 / g);
		return numerator / denominator;
	}


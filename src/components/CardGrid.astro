---
/**
 * CardGrid - Grille de cartes responsive
 * Utilisé pour afficher des éléments en grille
 *
 * Props:
 * - columns: number - Nombre de colonnes sur desktop (2 ou 3 généralement)
 */

interface Props {
  columns?: number;
}

const { columns = 2 } = Astro.props;
const gridClass = columns === 3 ? "md:grid-cols-3" : "md:grid-cols-2";
---

<div class={`grid ${gridClass} gap-4`}>
  <slot />
</div>
